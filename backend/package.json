    "start": "functions-framework --target=payment-methods",
    "prestart": "npm run build",
    "gcp-build": "npm run build",
    "deploy-query-recipients": "gcloud functions deploy query-recipients --env-vars-file .env.prod.yml --gen2 --runtime=nodejs16 --region=us-central1 --trigger-http --allow-unauthenticated",
    "deploy-new-member": "gcloud functions deploy new-member --env-vars-file .env.prod.yml --gen2 --runtime=nodejs16 --region=us-central1 --trigger-http --allow-unauthenticated",
    "deploy-all": "npm run deploy-query-recipients && npm run deploy-new-member"
